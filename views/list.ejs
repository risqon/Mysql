<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Homepage</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <br>
        <div>
            <h1 class="mt-3">BREAD(Browse,Read,Edit,Add,Delete)</h1>
            <h2>Filters</h2>
        </div>
        <!--        ATAS        -->
        <form action="/" method="GET">
            <div class="form-group row">
                <!-- ID-->
                <label for="id" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" name="checkId" value="true" id="id">
                    ID
                </label>
                <div class="col-sm-10">
                    <input type="number" name="id" class="form-control" id="id" placeholder="ID">
                </div>
            </div>
            <!--String-->
            <div class="form-group row">
                <label for="string" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" name="checkString" value="true" id="string">
                    String
                </label>
                <div class="col-sm-10">
                    <input type="text" name="string" class="form-control" id="string" placeholder="String">
                </div>
            </div>
            <!--Int-->
            <div class="form-group row">
                <label for="Integer" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" name="checkInteger" value="true" id="integer">
                    Integer
                </label>
                <div class="col-sm-10">
                    <input type="number" name="integer" class="form-control" id="integer" placeholder="Integer">
                </div>
            </div>
            <!--flo-->
            <div class="form-group row">
                <label for="Float" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" name="checkFloat" value="" id="float">
                    Float
                </label>
                <div class="col-sm-10">
                    <input type="text" name="float" class="form-control" id="float" placeholder="Float">
                </div>
            </div>
            <!-- date-->
            <div class="form-group row">
                <label for="Date" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" name="checkDate" value="" id="Date">
                    Date</label>
                <div class="form-group">
                    <div class="col-sm-11">
                        <input type="date" name="startDate" class="form-control" id="Date" placeholder="start date" />
                    </div>
                    <div class="col-sm-11">
                        <label for="To">to</label>
                        <input type="date" name="endDate" class="form-control" id="Date" placeholder="end date" />
                    </div>
                </div>
            </div>
            <!--        Boolean       -->
            <div class="form-group row">
                <label for="Boolean" class="col-sm-2 col-form-label">
                    <input class="form-check-input" type="checkbox" value="" id="Boolean">Boolean</label>
                <div class="col-md-10 mb-5">
                    <select class="custom-select" id="validationDefault04" required>
                        <option selected disabled>Choose the boolean...</option>
                        <option>true</option>
                        <option>false</option>
                    </select>
                </div>
            </div>

            <button type="submit" name="button" class="btn btn-primary">Search</button>
            <a href="/" class="btn btn-warning">Reset</a>
            
        </form>
        <div class="container mt-4">
            <!--        BAWAH           -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">String</th>
                        <th scope="col">Integer</th>
                        <th scope="col">Float</th>
                        <th scope="col">Date</th>
                        <th scope="col">Boolean</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% dbFile.forEach(item => {%>
                    <tr>
                        <td><%= item.id%></td>
                        <td><%= item.string%></td>
                        <td><%= item.integer%></td>
                        <td><%= item.float%></td>
                        <td><%= item.date%></td>
                        <td><%= item.boolean%></td>
                        <td>
                            <a class="btn btn-success edit" href="edit/<%= item.id %>">Edit</a>
                            <a class="btn btn-danger delete"
                                onclick="return confirm('Are you sure you want to delete this item?');"
                                href="delete/<%= item.id %>">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <!--PAGINATION-->
        <br />
        <ul class="pagination">

            <li class="page-item <%= page == 1 ? 'disabled': ''; %>"><a class="page-link"
                    href="/?page=<%= parseInt(page) - 1%>">Previous</a></li>
            <%for(let i = 1; i<= pages; i++){%>
            <li class="page-item"><a class="page-link" href="/?page=<%= i %>"><%= i%></a></li>
            <%}%>
            <li class="page-item <%= page == 6 ? 'disabled': ''; %>"><a class="page-link"
                href="/?page=<%= parseInt(page) + 1%>">Next</a></li>

        </ul>

        <a href="add" type="sudmit" class="btn btn-primary mt-2">Add</a>
        <!-- </div> --><br><br>
    </div>
</body>

</html>